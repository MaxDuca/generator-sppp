{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "rootDir": "src",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "newLine": "LF",
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "app"
  },
  "exclude": [
    "node_modules",
    "app",
    "src/templates"
  ]
}